@using TrungTamAnhNgu.Models
@{
    List<Teacher> teachers = ViewBag.teachers;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/helper.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar">


    <div id="main-wrapper">
        @Html.Partial("~/Views/Shared/_Header.cshtml")
        @Html.Partial("~/Views/Shared/_AdminLeftBar.cshtml")

        <div class="page-wrapper">

            <div class="container-fluid">
                <!-- Start Page Content -->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-validation">
                                    <form class="form-valide" id="formAddClass" action="/Admin/AddClassHandler" onsubmit="return validate()" method="post" enctype="multipart/form-data"  >

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Mã lớp <span class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="id">
                                            </div>
                                            <br>
                                            <div class="text-danger" id="idWarning"> </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Tên lớp <span class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="name">
                                            </div>
                                            <br>
                                            <div class="text-danger" id="nameWarning"> </div>
                                        </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Mã giáo viên <span class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <select name="teacherUsername">
                                                    @foreach (Teacher teacher in teachers)
                                                    {
                                                        <option value="@teacher.UserName">@teacher.UserName - @teacher.Name</option>
                                                    }
                                                </select>
                                            </div>
                                            <br>
                                            <div class="text-danger" id="teacherUsernameWarning"> </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Học phí <span class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="charge">
                                            </div>
                                            <br>
                                            <div class="text-danger" id="chargeWarning"> </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Danh sách học viên </label>
                                            <div class="col-lg-6">
                                                <input type="file" class="form-control" name="studentList" accept=".xlsx, .xls" >
                                            </div>  
                                        </div>


                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <button type="submit" class="btn btn-primary">Thêm</button>
                                            </div>

                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- End PAge Content -->
            </div>
        </div>

    </div>


    <!-- script -->
    <script src="~/js/lib/jquery/jquery.min.js"></script>
    <script src="~/js/lib/bootstrap/js/popper.min.js"></script>
    <script src="~/js/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.slimscroll.js"></script>
    <script src="~/js/sidebarmenu.js"></script>
    <script src="~/js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="~/js/custom.min.js"></script>


    <script src="~/js/lib/form-validation/AddClass.validate.js"></script>

</body>

</html>

