@using TrungTamAnhNgu.Models
@{ 
    List<Teacher> teachers = ViewBag.Teachers;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/helper.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar">
   
    <!-- Main wrapper  -->
    <div id="main-wrapper">

        @Html.Partial("~/Views/Shared/_Header.cshtml")
        @Html.Partial("~/Views/Shared/_AdminLeftBar.cshtml")
        <!-- Page wrapper  -->
        <div class="page-wrapper">

            <!-- Container fluid  -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">

                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Danh sách các giáo viên</h4>
                                <h5><a href="/Admin/AddTeacher">Thêm giáo viên</a></h5>
                                <div class="table-responsive m-t-40">
                                    <table id="myTable" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Mã tên</th>
                                                <th>CMND</th>
                                                <th>Tên</th>
                                                <th>Ngày sinh</th>
                                                <th>Email</th>
                                                <th>SĐT</th>
                                                <th>Chức năng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Teacher teacher in teachers)
                                        {

                                            <tr>
                                                <td>@teacher.UserName</td>
                                                <td>@teacher.Id</td>
                                                <td>@teacher.Name</td>
                                                <td>@teacher.DayOfBirth</td>
                                                <td>@teacher.Email</td>
                                                <td>@teacher.PhoneNumber</td>
                                                <td>
                                                    <a href="/Admin/DeleteTeacher?username=@teacher.UserName">Xóa</a>
                                                    -
                                                    <a href="/Admin/UpdateTeacher?username=@teacher.UserName">Cập nhật</a>
                                                </td>
                                            </tr>

                                    }


                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <!-- End Container fluid  -->
        </div>
        <!-- End Page wrapper  -->
        <!-- script -->
        <script src="~/js/lib/jquery/jquery.min.js"></script>
        <script src="~/js/lib/bootstrap/js/popper.min.js"></script>
        <script src="~/js/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
        <script src="~/js/sidebarmenu.js"></script>
        <script src="~/js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
        <script src="~/js/custom.min.js"></script>



        <script src="~/js/lib/datatables/initTable.js"></script>
        <script src="~/js/lib/datatables/searchData.js"></script>
        <script src="~/js/lib/datatables/sortData.js"></script>
        <link href="~/css/lib/data-table/dataTables.css" rel="stylesheet"/>
    </div>
</body>

</html>
