@using TrungTamAnhNgu.Models
@{
    Register register = ViewBag.register;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/helper.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar">


    <div id="main-wrapper">
        @Html.Partial("~/Views/Shared/_Header.cshtml")
        @Html.Partial("~/Views/Shared/_AdminLeftBar.cshtml")

        <div class="page-wrapper">

            <div class="container-fluid">
                <!-- Start Page Content -->
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-validation">
                                    <form class="form-valide" action="/Admin/UpdateRegisterHandler"  method="post" >

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Mã lớp </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="classId" value="@register.ClassId" readonly>
                                            </div>  
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Tên lớp </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" value="@register.Class.Name" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Mã học viên </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="studentUsername" value="@register.StudentUsername" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Tên học viên </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" value="@register.Student.Name" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Đã trả học phí </label>
                                             <div class="col-lg-6">
                                                @if ((Boolean)register.IsPay)
                                                {
                                                    <input type="checkbox" class="form-control" name="isPay" value="1" checked>
                                                }
                                                else
                                                {
                                                    <input type="checkbox" class="form-control" name="isPay" value="1">
                                                }
                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- End PAge Content -->
            </div>
        </div>

    </div>


    <!-- script -->
    <script src="~/js/lib/jquery/jquery.min.js"></script>
    <script src="~/js/lib/bootstrap/js/popper.min.js"></script>
    <script src="~/js/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.slimscroll.js"></script>
    <script src="~/js/sidebarmenu.js"></script>
    <script src="~/js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
    <script src="~/js/custom.min.js"></script>


    <script src="~/js/lib/form-validation/AddClass.validate.js"></script>

</body>

</html>



