@using TrungTamAnhNgu.Models
@{
    List<Register> registers = ViewBag.registers;
    string classId = ViewBag.classId;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/helper.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar">

    <!-- Main wrapper  -->
    <div id="main-wrapper">

        @Html.Partial("~/Views/Shared/_Header.cshtml")
        @Html.Partial("~/Views/Shared/_AdminLeftBar.cshtml")
        <!-- Page wrapper  -->
        <div class="page-wrapper">

            <!-- Container fluid  -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">

                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Danh sách lớp @classId</h4>
                                <h5><a href="/Admin/AddRegister?classId=@classId">Thêm đăng kí</a></h5>
                                <div class="table-responsive m-t-40">
                                    <table id="myTable" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Mã tên</th>
                                                <th>Tên</th>
                                                <th>Email</th>
                                                <th>SĐT</th>
                                                <th>Trường</th>
                                                <th>Năm</th>
                                                <th>Đã đóng học phí</th>
                                                <th>Chức năng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Register register in registers)
                                        {

                                            <tr>
                                                <td>@register.Student.UserName</td>
                                                <td>@register.Student.Name</td>
                                                <td>@register.Student.Email</td>
                                                <td>@register.Student.PhoneNumber</td>
                                                <td>@register.Student.School</td>
                                                <td>@register.Student.Grade</td>
                                                <td>@register.IsPay</td>
                                                <td>
                                                    <a href="/Admin/DeleteRegister?classId=@classId&username=@register.Student.UserName">Xóa đăng kí</a>
                                                    -
                                                    <a href="/Admin/UpdateRegister?classId=@classId&username=@register.Student.UserName">Cập nhật đăng kí</a>
                                                </td>
                                            </tr>

                                    }


                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <!-- End Container fluid  -->
        </div>
        <!-- End Page wrapper  -->
        <!-- script -->
        <script src="~/js/lib/jquery/jquery.min.js"></script>
        <script src="~/js/lib/bootstrap/js/popper.min.js"></script>
        <script src="~/js/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
        <script src="~/js/sidebarmenu.js"></script>
        <script src="~/js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
        <script src="~/js/custom.min.js"></script>



        <script src="~/js/lib/datatables/initTable.js"></script>
        <script src="~/js/lib/datatables/searchData.js"></script>
        <script src="~/js/lib/datatables/sortData.js"></script>
        <link href="~/css/lib/data-table/dataTables.css" rel="stylesheet"/>
    </div>
</body>

</html>


