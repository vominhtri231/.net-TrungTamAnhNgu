@using TrungTamAnhNgu.Models
@{
    Homework homework= ViewBag.homework;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/helper.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar">

    <!-- Main wrapper  -->
    <div id="main-wrapper">

        @Html.Partial("~/Views/Shared/_Header.cshtml")

        <!-- Page wrapper  -->
        <div class="page-wrapper" style="margin-left:0px">

            <!-- Container fluid  -->
            <div class="container-fluid">

                <!-- Start Page Content -->
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-validation">
                                    <form class="form-valide"  action="/Student/SubmitHomeworkHandler"  method="post" enctype='multipart/form-data'>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">ID Lớp </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="classId" value="@homework.ClassId" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Tên lớp </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" value="@homework.Lesson.Class.Name" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Buổi số </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="classNumber" value="@homework.Lesson.ClassNumber" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Nội dung bài học </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control"  value="@homework.Lesson.LessionContent" readonly>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Bài làm</label>
                                            <div class="col-lg-6">
                                                <input type="file" class="form-control" name="homework">
                                            </div>
                                        </div>

                                        

                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <button type="submit" class="btn btn-primary">Nộp</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- End PAge Content -->

            </div>
            <!-- End Container fluid  -->
        </div>
        <!-- End Page wrapper  -->
        <!-- script -->
        <script src="~/js/lib/jquery/jquery.min.js"></script>
        <script src="~/js/lib/bootstrap/js/popper.min.js"></script>
        <script src="~/js/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
        <script src="~/js/sidebarmenu.js"></script>
        <script src="~/js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
        <script src="~/js/custom.min.js"></script>

    </div>
</body>

</html>





