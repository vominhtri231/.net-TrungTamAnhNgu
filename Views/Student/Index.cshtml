@using TrungTamAnhNgu.Models
@{
    List<Register>  registers= ViewBag.registers;
    List<Message> messages = ViewBag.messages;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/helper.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar">

    <!-- Main wrapper  -->
    <div id="main-wrapper">

        @Html.Partial("~/Views/Shared/_Header.cshtml")

        <!-- Page wrapper  -->
        <div class="page-wrapper" style="margin-left:0px">

            <!-- Container fluid  -->
            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">

                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Thông báo</h4>

                                <div class="table-responsive m-t-40">
                                    <table id="myTable"  class="table">
                                        <thead>
                                            <tr>
                                                <th>Mã lớp</th>
                                                <th>Lớp</th>
                                                <th>Ngày</th>
                                                <th>Tin nhắn</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           
                                            @foreach (Message message in messages)
                                            {
                                               
                                                if (@message.Day.Value.AddDays(3) >= DateTime.Now)
                                                {
                                                    <tr >
                                                        <td class="color-danger">@message.ClassId</td>
                                                        <td class="color-danger">@message.Class.Name</td>
                                                        <td class="color-danger">@message.Day</td>
                                                        <td class="color-danger">@message.Content</td>
                                                    </tr>
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td>@message.ClassId</td>
                                                        <td>@message.Class.Name</td>
                                                        <td>@message.Day</td>
                                                        <td>@message.Content</td>
                                                    </tr>
                                                }
                                                

                                            }


                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-12">

                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Danh sách các đăng kí học của bạn</h4>

                                <div class="table-responsive m-t-40">
                                    <table id="myTable" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Mã lớp</th>
                                                <th>Tên</th>
                                                <th>Học phí</th>
                                                <th>Đóng học phí</th>
                                                <th>Chức năng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Register register in registers)
                                            {

                                                <tr>
                                                    <td>@register.ClassId</td>
                                                    <td>@register.Class.Name</td>
                                                    <td>@register.Class.Charge</td>
                                                    <td>@register.IsPay</td>
                                                    <td>
                                                        <a href="/Student/RegisterInfo?classId=@register.ClassId">Xem chi tiết</a>
                                                        -
                                                        <a href="/Student/SendRequest?classId=@register.ClassId">Gửi tin nhắn</a>
                                                    </td>
                                                </tr>

                                            }


                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <!-- End Container fluid  -->
        </div>
        <!-- End Page wrapper  -->
        <!-- script -->
        <script src="~/js/lib/jquery/jquery.min.js"></script>
        <script src="~/js/lib/bootstrap/js/popper.min.js"></script>
        <script src="~/js/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
        <script src="~/js/sidebarmenu.js"></script>
        <script src="~/js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
        <script src="~/js/custom.min.js"></script>



        <script src="~/js/lib/datatables/datatables.min.js"></script>
        <script src="~/js/lib/datatables/cdn.datatables.net/buttons/1.2.2/js/dataTables.buttons.min.js"></script>
        <script src="~/js/lib/datatables/cdn.datatables.net/buttons/1.2.2/js/buttons.flash.min.js"></script>
        <script src="~/js/lib/datatables/cdnjs.cloudflare.com/ajax/libs/jszip/2.5.0/jszip.min.js"></script>
        <script src="~/js/lib/datatables/cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/pdfmake.min.js"></script>
        <script src="~/js/lib/datatables/cdn.rawgit.com/bpampuch/pdfmake/0.1.18/build/vfs_fonts.js"></script>
        <script src="~/js/lib/datatables/cdn.datatables.net/buttons/1.2.2/js/buttons.html5.min.js"></script>
        <script src="~/js/lib/datatables/cdn.datatables.net/buttons/1.2.2/js/buttons.print.min.js"></script>
        <script src="~/js/lib/datatables/datatables-init.js"></script>
    </div>
</body>

</html>



