@using TrungTamAnhNgu.Models
@{
    Lesson lesson = ViewBag.lesson;
    string day = ((DateTime)lesson.Day).ToString("yyyy-MM-dd");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/helper.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body class="fix-header fix-sidebar">

    <!-- Main wrapper  -->
    <div id="main-wrapper">

        @Html.Partial("~/Views/Shared/_Header.cshtml")

        <!-- Page wrapper  -->
        <div class="page-wrapper" style="margin-left:0px">

            <!-- Container fluid  -->
            <div class="container-fluid">

                <!-- Start Page Content -->
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-validation">
                                    <form class="form-valide" id="formUpdateLesson" action="/Teacher/UpdateLessonHandler" onsubmit="return validate()" method="post" enctype='multipart/form-data'>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">ID Lớp </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="classId" value="@lesson.ClassId" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Tên lớp </label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" value="@lesson.Class.Name" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Buổi số <span class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="classNumber" value="@lesson.ClassNumber" readonly>
                                            </div>
                                            <br>
                                            <div class="text-danger" id="classNumberWarning"> </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Nội dung bài học <span class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="content" value="@lesson.LessionContent">
                                            </div>
                                            <br>
                                            <div class="text-danger" id="contentWarning"> </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Địa điểm <span class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input type="text" class="form-control" name="location" value="@lesson.Location">
                                            </div>
                                            <br>
                                            <div class="text-danger" id="locationWarning"> </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Ngày dạy<span class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input type="date" class="form-control" name="day" value="@day">
                                            </div>
                                            <br>
                                            <div class="text-danger" id="dayWarning"> </div>
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Bài tập</label>
                                            <div class="col-lg-6">
                                                <input type="file" class="form-control" name="homework" >
                                            </div>
                                            
                                        </div>

                                        <div class="form-group row">
                                            <label class="col-lg-4 col-form-label">Tài liệu</label>
                                            <div class="col-lg-6">
                                                <input type="file" class="form-control" name="support" >
                                            </div>
                                           
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-lg-8 ml-auto">
                                                <button type="submit" class="btn btn-primary">Thay đổi</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <!-- End PAge Content -->

            </div>
            <!-- End Container fluid  -->
        </div>
        <!-- End Page wrapper  -->
        <!-- script -->
        <script src="~/js/lib/jquery/jquery.min.js"></script>
        <script src="~/js/lib/bootstrap/js/popper.min.js"></script>
        <script src="~/js/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/jquery.slimscroll.js"></script>
        <script src="~/js/sidebarmenu.js"></script>
        <script src="~/js/lib/sticky-kit-master/dist/sticky-kit.min.js"></script>
        <script src="~/js/custom.min.js"></script>


        <script src="~/js/lib/form-validation/UpdateLesson.validate.js"></script>

    </div>
</body>

</html>





